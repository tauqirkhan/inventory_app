<div class="author">
  <button class="updateAuthorBtn" id="updateAuthorNameBtn<%= author.id%>">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      width="20"
      height="20"
    >
      <title>Edit Author Name</title>
      <path
        d="M 21.0413,11.14C 21.1827,11.14 21.3173,11.1973 21.4213,11.3027L 22.6973,12.5787C 22.912,12.792 22.912,13.14 22.6973,13.3493L 21.6973,14.3493L 19.6507,12.3027L 20.6507,11.3027C 20.76,11.1973 20.9013,11.14 21.0413,11.14 Z M 19.0627,12.88L 21.1093,14.932L 15.0627,21L 13,21L 13,18.9373L 19.0627,12.88 Z M 12,5.688L 7,10.188L 7,18L 11,18L 11,20L 5,20L 5,12L 2,12L 12,3L 19.4587,9.71285L 17,12.1716L 17,10.188L 12,5.688 Z"
      />
    </svg>
  </button>
  <a class="authorName" href="/<%= author.id %>/quotes"> <%= author.name %> </a>
  <form action="/<%=author.id%>/deleteAuthor" method="POST">
    <button class="deleteAuthorBtn">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        width="25"
        height="25"
      >
        <title>Delete Author</title>
        <path
          d="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z"
        />
      </svg>
    </button>
  </form>
  <dialog class="dialogEditAuthor" id="dialogUpdateAuthor<%= author.id %>">
    <form
      action="/<%=author.id%>/updateAuthor"
      method="POST"
      class="updateAuthorForm"
    >
      <div class="formHead">
        Update <%= author.name %> <br />
        to :
      </div>
      <input
        type="text"
        name="newAuthorName"
        placeholder="New Author Name"
        required
      />
      <input type="submit" value="Submit" />
    </form>
  </dialog>
</div>
