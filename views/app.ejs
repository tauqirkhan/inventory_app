<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Legacy Lines</title>
    <link rel="stylesheet" href="/styles.css" />
    <script src="/eventListener.js" defer></script>
  </head>
  <body>
    <header>Legacy Lines</header>
    <main>
      <section class="authorsSection">
        <button class="addAuthorBtn">+ Add Author</button>
        <% authorsArray.forEach(author => { %>
        <div class="author">
          <a href="/<%= author.id %>/quotes"> <%= author.name %> </a>
          <form action="/<%=author.id%>/deleteAuthor" method="POST">
            <button type="submit" class="deleteAuthorBtn">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="25"
                height="25"
              >
                <title>trash-can-outline</title>
                <path
                  d="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z"
                />
              </svg>
            </button>
          </form>
        </div>
        <% }) %>
      </section>
      <section class="quotesSection">
        <div class="quotesHead">
          <h1 class="quoteAuthor"><%= authorName %>'s quotes</h1>
          <button class="addQuoteBtn">+ Add more quote</button>
        </div>
        <div class="quotesDiv">
          <% quotesArray.forEach((quote, index) => { %>
          <div class="quote"><%= quote.quote %></div>
          <form action="/<%= quote.id %>/deleteQuote" method="POST">
            <button type="submit" class="deleteQuoteBtn">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                width="25"
                height="25"
              >
                <title>trash-can-outline</title>
                <path
                  d="M9,3V4H4V6H5V19A2,2 0 0,0 7,21H17A2,2 0 0,0 19,19V6H20V4H15V3H9M7,6H17V19H7V6M9,8V17H11V8H9M13,8V17H15V8H13Z"
                />
              </svg>
            </button>
          </form>
          <% }) %>
        </div>
      </section>
      <dialog id="dialogAuthor">
        <form method="POST" action="/addAuthor" class="authorForm">
          <div class="formHead">Add author name</div>
          <input
            type="text"
            name="authorName"
            placeholder="Authors Name"
            required
          />
          <input type="submit" value="Submit" />
        </form>
      </dialog>
      <dialog id="dialogQuote">
        <form
          action="/<%= author_id %>/addQuote"
          method="POST"
          class="quoteForm"
        >
          <div class="formHead"><%= authorName %>'s quote</div>
          <input type="text" name="quote" placeholder="Quote" required />
          <input type="submit" value="Submit" />
        </form>
      </dialog>
    </main>
  </body>
</html>
